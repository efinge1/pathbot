</category>

<!-- Career route -->
<category><pattern>CAREER</pattern>
<template>
<condition name="career">
  <li value="software"><srai>SOFTWARE DEVELOPER</srai></li>
  <li value="security"><srai>CYBERSECURITY ANALYST</srai></li>
  <li value="game"><srai>GAME DEVELOPER</srai></li>
  <li value="network"><srai>NETWORK ADMINISTRATOR</srai></li>
  <li value="data"><srai>DATA ANALYST</srai></li>
</condition>
</template>
</category>

</aiml>
